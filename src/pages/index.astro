---
import Home from "../components/Home.astro";
import NavBar from "../components/NavBar.astro";
import "../styles/main.css";
---

<html>
  <head>
    <link rel="stylesheet" href="/node_modules/xp.css/dist/XP.css" id="xp-css" />
    <link rel="preload" href="/loading.css" as="style" />
    <noscript><link rel="stylesheet" href="/loading.css" /></noscript>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="my cozy little personal website" />
    <meta property="og:image" content="/avatar.png" />
    <title>home of kine</title>
    <script>
      // Wait for XP.css to load before revealing content
      document.addEventListener('DOMContentLoaded', () => {
        const xpCssLink = document.getElementById('xp-css');
        if (xpCssLink) {
          xpCssLink.addEventListener('load', () => {
            document.body.classList.add('styles-loaded');
          });
          // In case it's already loaded
          if (xpCssLink.sheet) {
            document.body.classList.add('styles-loaded');
          }
        }
      });
    </script>
  </head>
  <body>
    <Home />
    <NavBar
      links={[
        { label: "home", href: "/" },
        { label: "addons", href: "/addons/" },
        { label: "contact", href: "/contact" },
        { label: "slides", href: "/Layered Network Security Model for Home Networks (slides).pdf" },
        { label: "paper", href: "/5.html" },
      ]}
    />
  </body>
</html>
